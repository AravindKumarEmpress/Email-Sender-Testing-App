@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("SendMail", "Home", FormMethod.Post))
{
    <div class=" row ">
        <div class="panel panel-default panel-body modal-content">
            <div class="col-lg-3 col-md-3 col-sm-3 "></div>
            <div class="col-lg-6 col-md-6 col-sm-6 center-block">
                <label class="label label-primary">To :</label>
                <input type="text" name="To" class="input-group form-control input-lg" style="" placeholder="" autocomplete="on" autofocus />
                <br />
                <label class="label label-primary">From :</label>
                <input type="text" name="From" class="input-group form-control input-lg" placeholder="" autocomplete="on" autofocus />
                <br />
                <input type="submit" value="Send" class="btn btn-info input-group" />
            </div>
        </div>
    </div>
}