@{
    ViewBag.Title = "Home Page";
}

@using (Ajax.BeginForm("SendMail", "Home", new AjaxOptions { HttpMethod = "POST", OnBegin = "", OnComplete = "", OnFailure = "", OnSuccess = "" }))
{
    <div class=" row ">
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
        <div class="card col-lg-6 col-md-6 col-sm-6 shadow">
            <div class="card-header bg-white">
                <h2 class="h2">Send Mail</h2>
            </div>
            <div class="card-body">
                <label class="label label-primary">To :</label>
                <input type="text" name="To" class="input-group form-control input-lg" style="" placeholder="" autocomplete="on" autofocus />
                <br />
                <label class="label label-primary">From :</label>
                <input type="text" name="From" class="input-group form-control input-lg" placeholder="" autocomplete="on" autofocus />
                <br />
            </div>
            <div class="card-footer bg-white ">
                @*@Html.ActionLink("Template Editor", "TemplateEditor", null,new { @class= "btn btn-info input-group btn-lg justify-content-center col-lg-3 col-md-3 col-sm-3" })*@
                <a href="/EditorConsole">
                    <button class="btn btn-info btn-lg justify-content-center float-left" type="button">
                        <i class="glyphicon glyphicon-edit"></i>
                        &nbsp;&nbsp; Editor
                    </button>
                </a>
                <button class="btn btn-info btn-lg justify-content-center float-right " type="submit"><i class="glyphicon glyphicon-send"></i>&nbsp;&nbsp; Send</button>
            </div>
        </div>
    </div>
}
